{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "typora-crack",
  "version": "0.1.0",
  "identifier": "top.atopx.typora-crack",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Typora 学习工具",
        "width": 600,
        "height": 520,
        "resizable": true,
        "minimizable": true,
        "maximizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
